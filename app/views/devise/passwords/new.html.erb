<div class="login-page d-flex justify-content-center align-items-center vh-100">
  <div class="login-card card shadow-lg p-4" style="max-width: 400px; width: 100%;">
    <h2 class="text-center mb-4">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), data: { turbo: false }) do |f| %>
      <div class="mb-3">
        <%= f.label :email, "Email address", class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="btn-group">
        <%= f.submit "Send reset instructions", class: "btn btn-primary" %>
        <%= link_to "Back to login", new_session_path(resource_name), class: "btn btn-link" %>
      </div>
    <% end %>
  </div>
</div>
