<h1>User Details</h1>

<div class="user-info">
  <p><strong>Email:</strong> <%= @user.email %></p>
  <p><strong>Role:</strong> <%= @user.role.titleize %></p>
</div>

<h2>Time Entries</h2>
<% if @time_entries.any? %>
  <ul>
    <% @time_entries.each do |entry| %>
      <li>
        <strong>Date:</strong> <%= entry.date %>,
        <strong>Distance:</strong> <%= entry.distance %> km,
        <strong>Time:</strong> <%= entry.time_in_seconds %> seconds
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No time entries yet.</p>
<% end %>

<div class="actions">
  <% if policy(@user).edit? %>
    <%= link_to "Edit User", edit_user_path(@user), class: "btn btn-primary" %> |
  <% end %>

 <% if current_user.admin? %>
  <%= link_to "Manage Time Entries", time_entries_path(user_id: @user.id), target: "_blank", class: "btn btn-primary" %> |
<% end %>


  
  <%= link_to "Back to Users", users_path, class: "btn btn-secondary" %>

</div>

