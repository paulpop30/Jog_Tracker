<div class="modern-form-wrapper">
  <div class="form-card">
    <h2 class="text-2xl font-semibold mb-6 text-center">
      <%= @user.new_record? ? "New User" : "Edit User" %>
    </h2>

    <%= form_for(@user) do |f| %>

      <div class="form-group">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, class: "modern-input" %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, class: "modern-input", autocomplete: "new-password" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Confirm Password", class: "form-label" %>
        <%= f.password_field :password_confirmation, class: "modern-input", autocomplete: "new-password" %>
      </div>

      <div class="form-group">
        <%= f.label :role, class: "form-label" %>
        <%= f.select :role, User.roles.keys, {}, class: "modern-input" %>
      </div>

      <div class="form-group">
        <%= f.submit "Save", class: "modern-btn" %>
      </div>

    <% end %>
  </div>
</div>
